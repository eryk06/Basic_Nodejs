      <!-- Simple Datatable start -->
      <div class="card-box mb-30">
        <div class="pd-20">
          <h4 class="text-blue h4">Data Table Simple</h4>
        </div>
        <div class="pb-20">
          <table class="data-table table stripe hover nowrap">
            <thead>
              <tr>
                <th class="table-plus datatable-nosort">Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th class="datatable-nosort">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <td class="table-plus">{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
                <td>
                  <img src="{{this.image}}" alt="" width="100" height="100" />
                </td>
                <td>
                  <a href="/cpanel/products/{{this._id}}/edit" class="btn btn-success">Edit</a>
                  <a onclick="confirmDelete('{{this._id}}')" class="btn btn-danger">Delete</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
        </div>
      </div>
      <script>
        const fetchAPI = async (url, option) => {
          const res = await fetch(url, option);
          return res.json();
        }

        // Xác nhận xóa hay không
        const deleteProduct = async (id) => {
          const url = `/cpanel/products/${id}/delete`;
          const option = {
            method: 'GET',
            headers: { 'Content-Type': 'application/json' }
          }
          try {
            const res = await fetchAPI(url, option);
            if (res.result) {
              swal("Đã xóa!,", 'Xóa thành công', 'Success')
              setTimeout(() => {
                window.location.reload();
              }, 5000);
            } else {
              swal('Lỗi!', 'Xóa thất bại', 'error');
            }
          } catch (error) {
            console.log(error)
          }
        }

        const confirmDelete = (id) => {
          swal({
            title: "Bạn có chắc chắn muốn xóa?",
            text: "Sau khi xóa, bạn sẽ không thể khôi phục lại dữ liệu này!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
          })
            .then((willDelete) => {
              if (willDelete) {
                deleteProduct(id);
              }
            });
        }
      </script>